---
import Layout from '../../layouts/Layout.astro';
import { blogPosts } from '../../data/blogPosts';
---

<Layout
  title="Blog - Cristian Ramírez"
  description="Artículos y reflexiones sobre liderazgo, capacitación y desarrollo organizacional"
>
  <!-- Header -->
  <section class="bg-black text-white py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-gray-300 max-w-2xl">
        Ideas, reflexiones y aprendizajes sobre liderazgo y desarrollo profesional
      </p>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="space-y-8">
          {
            blogPosts.map((post) => (
              <article class="bg-white border border-gray-200 rounded-lg p-6 md:p-8 hover:shadow-lg transition-shadow">
                <div class="flex items-center mb-3">
                  <span class="inline-block bg-black text-white text-xs px-3 py-1 rounded-full font-semibold">
                    {post.categoria}
                  </span>
                  <span class="ml-4 text-sm text-gray-500">{post.fecha}</span>
                </div>
                <h2 class="text-2xl md:text-3xl font-bold mb-3 hover:text-gray-700 transition-colors">
                  <a href={`/blog/${post.slug}`}>{post.titulo}</a>
                </h2>
                <p class="text-gray-600 mb-4 leading-relaxed">{post.extracto}</p>
                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-black font-semibold hover:text-gray-700 transition-colors"
                >
                  Leer más
                  <svg
                    class="w-4 h-4 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">¿Quieres recibir nuevos artículos?</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Suscríbete para recibir las últimas reflexiones y recursos directamente en tu correo
      </p>
      <form class="max-w-md mx-auto flex gap-2">
        <input
          type="email"
          placeholder="tu@email.com"
          class="flex-1 px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
        />
        <button
          type="submit"
          class="bg-black text-white px-6 py-3 rounded-md font-semibold hover:bg-gray-800 transition-colors"
        >
          Suscribir
        </button>
      </form>
    </div>
  </section>
</Layout>
